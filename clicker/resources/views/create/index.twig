{% extends 'templates/app.twig'%}

{% block content %}

<form action="#" method="post">
	<div class="row">
		<div class="col-md-8">
			<div class="row">
				<div class="col-md-6">
					<h3>Quiz Details</h3>
					<hr>
					
					<div class="form-group {% if errors.name %}has-error{%endif%}" > 
						<label for="name">Quiz Title</label>
						<input type="text" name="title" id="name" class="form-control" value="{{old.title}}">
					</div>
					{% if errors.name %}
					<span class="help-block">
						{{errors.name| first}}
					</span>
					{%endif%}

				</div>
				<div class="col-md-6">
					<h3>Questions</h3>
					<hr>

					<div class="form-group {% if errors.address1 %}has-error{%endif%}">
						<label for="address1">Question Content</label>
						<textarea name="address1" id="address1" rows=5 class="form-control" value="{{old.address1}}"> </textarea>
					</div>

					{% if errors.address1 %}
					<span class="help-block">
						{{errors.address1| first}}
					</span>
					{%endif%}


					<div class="form-group {% if errors.city %}has-error{%endif%}">
						<label for="city">A</label>
						<input type="text" name="city" id="city" class="form-control" value="{{old.city}}">
					</div>

					{% if errors.city %}
					<span class="help-block">
						{{errors.city| first}}
					</span>
					{%endif%}

					<div class="form-group {% if errors.post_code %}has-error{%endif%}">
						<label for="post_code">B</label>
						<input type="text" name="post_code" id="post_code" class="form-control" value="{{old.post_code}}">
					</div>
					{% if errors.post_code %}
					<span class="help-block">
						{{errors.post_code| first}}
					</span>
					{%endif%}


					<div class="form-group {% if errors.post_code %}has-error{%endif%}">
						<label for="post_code">C</label>
						<input type="text" name="post_code" id="post_code" class="form-control" value="{{old.post_code}}">
					</div>
					{% if errors.post_code %}
					<span class="help-block">
						{{errors.post_code| first}}
					</span>
					{%endif%}


					<div class="form-group {% if errors.post_code %}has-error{%endif%}">
						<label for="post_code">D</label>
						<input type="text" name="post_code" id="post_code" class="form-control" value="{{old.post_code}}">
					</div>
					{% if errors.post_code %}
					<span class="help-block">
						{{errors.post_code| first}}
					</span>
					{%endif%}

				</div>
			</div>


		</div>
			<div class="col-md-4">
			
			<div class="well">
			<h4>Create Quiz</h4>
			<hr>



			<button type="submit" class="btn btn-default">Add Question</button>

			</div>
			
		</div>
		
	</div>
</form>

{% endblock %}


	
